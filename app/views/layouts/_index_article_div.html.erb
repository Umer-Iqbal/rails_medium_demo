<% @articles.each do |article| %>
  <ul>
    <div class="homepage_article_div">
      <hr>
      <div class="d-flex">
        <div class="user_image_div">
          <% if article.user.avatar.attached? %>
            <%= image_tag article.user.avatar.representation(resize_to_limit:[20, 20]) %>
          <% end %>
        </div>
        <div class="user_name_div">
          <%= article.user.username %>
        </div>
        <div class="article_creation_date">
          . <%= article.created_at.strftime("%b %d,%Y") %>
        </div>
      </div>

      <div class="article_and_image_reper_div mt-2 d-none d-md-flex">
        <div class="index_article">
          <div class="index_article_title_div">
            <h2 class="index_article_title"><%= article.title %></h2>
          </div>
          <div class="index_article_body_div d-none d-md-block">
            <p class="index_article_body"><%= article.body %></p>
          </div>
        </div>
        <div class="index_article_image d-none d-md-block">
          <% if article.user.avatar.attached? %>
            <%= image_tag article.user.avatar.representation(resize_to_limit:[200, 100]) %>
          <% end %>
        </div>
      </div>

      <div class="small-screen-article-and-image-reper_div mt-2 d-md-none">
        <div class="index_article">
          <div class="small-screen-index-article-title_div">
            <h2 class="small-screen-index-article-title"><%= article.title %></h2>
          </div>
          <div class="index_article_body_div d-none ">
            <p class="index_article_body"><%= article.body %></p>
          </div>
        </div>
        <div class="index-small-screen-article_image">
          <% if article.user.avatar.attached? %>
            <%= image_tag article.user.avatar.representation(resize_to_limit:[200, 100]) %>
          <% end %>
        </div>
      </div>
    </div>
  </ul>
<% end %>
<div class="index_pagy_nave ">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>