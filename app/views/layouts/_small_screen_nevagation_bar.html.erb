<div class="d-xl-none bg-white d-flex justify-content-center small-screen-nevegation-bar">
  <div class="col-2">
    <%= link_to root_path do %>
      <span class="w3-xlarge fa fa-home td-non"></span>
    <% end %>
  </div>
  <div class="col-2">
    <%= link_to user_path(current_user.id) do %>
      <span class="w3-xlarge fas fa-folder-open td-non"></span>
    <% end %>
  </div>
  <div class="col-2">
    <%= link_to root_path do %>
      <span class="w3-xlarge fa fa-user td-non"></span>
    <% end %>
  </div>
  <div class="col-2">
    <%= link_to root_path do %>
      <span class="w3-xlarge fa fa-search td-non"></span>
    <% end %>
  </div>
  <div class="col-2">
    <%= link_to new_article_path do %>
      <span class="w3-xlarge far fa-edit td-non"></span>
    <% end %>
  </div>
  <div class="col-2">
    <%= link_to root_path, class: "login-user-image" do %>
      <% if current_user.avatar.attached? %>
        <%= image_tag current_user.avatar %>
      <% end %>
    <% end %>
  </div>
</div>