<div class="container-fluid index-container-fluid">
  <div class="row" style="width: 100%">
    <div class="d-none d-xl-block col-xl-1 col-xxl-2   ">
      <div class="index_nevegation_bar">
        <div class="index_medium_logo"  >
          <%=  image_tag src="medium_icon.png" %>
        </div>

        <div class="links justify-content-around">
          <%= link_to "", root_path, class:"w3-xlarge fa fa-home td-non" %>
          <%= link_to "", user_path(current_user.id), class:"w3-xlarge fas fa-folder-open td-non" %>
          <%= link_to "", root_path, class:"w3-xlarge fa fa-user td-non" %>
          <hr>
          <%= link_to "", root_path, class:"w3-xlarge far fa-edit td-non"%>
        </div>

        <div class="login_user_image" >
          <% if current_user.avatar.representable? %>
            <%= image_tag current_user.avatar %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="d-none d-xl-block col-xl-8 col-xxl-7 border-start border-end justify-content-center ">
      <% @articles.each do |article| %>
        <ul>
          <div class="homepage_article_div">
            <hr>
            <div class="article_and_image_reper_div mt-2">
              <div class="index_article">
                <div class="index_article_title_div">
                  <h2 class="index_article_title"><%= article.title %></h2>
                </div>
                <div class="index_article_body_div">
                  <p class="index_article_body"><%= article.body %></p>
                </div>
              </div>
              <div class="index_article_image">
                <% if article.user.avatar.representable? %>
                  <%= image_tag article.user.avatar.representation(resize_to_limit:[200, 100]) %>
                <% end %>
              </div>
            </div>
          </div>

        </ul>
      <% end %>
      <div class="index_pagy_nave ">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>

    <div class="d-xl-none  col-sm-12 justify-content-center ">
      <%= render "layouts/index_article_div" %>
      <div class="index_pagy_nave ">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>

    <div class="d-none d-xl-block col-xl-3 ">
      <%= link_to "Log Out", destroy_user_session_path, data: { turbo_method: :delete }, class:"mt-5" %>
      <%= render "layouts/article_search" %>
    </div>
  </div>

  <%= render "layouts/small_screen_nevagation_bar" %>
</div>





